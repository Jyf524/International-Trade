    ViewBag.Title = "ForeExhibitionApplication";
    Layout = "~/Views/Shared/ForeLayout.cshtml";
}


<link href="~/Content/css/fileinput.css" rel="stylesheet" />
<link href="~/Content/css/fileinput.min.css" rel="stylesheet" />


