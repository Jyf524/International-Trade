@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
</head>

<body>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/front.js"></script>
    <script>

        $(function () {
            $("#btn_Register").click(function () {
                $.post(
                    '@Url.Action("Register1", "ForeExhibition")', $('#form1').serialize(),
                function (result) {
                    if (result == "注册成功") {
                        alert(result);
                        window.location.href = '../ForeExhibition/Login';
                        return;
                    }
                    alert(result);
                });
            });

        });


    </script>

    <form id="form1">
        <div class="page login-page">
            <div class="container d-flex align-items-center">
                <div class="form-holder has-shadow">
                    <div class="row">
                        <!-- Logo & Information Panel-->
                        <div class="col-lg-6">
                            <div class="info d-flex align-items-center" style="height: 100px;">
                                <div class="content">
                                    <div class="logo">
                                        <h1>注册</h1>
                                    </div>
                                    <p>Register</p>
                                </div>
                            </div>
                        </div>
                        <!-- Form Panel    -->
                        <div class="col-lg-6 bg-white">
                            <div class="form d-flex align-items-center">
                                <div class="content">
                                    <div class="form-group">
                                        <input id="UserName" type="text" name="UserName" required data-msg="请输入用户名" class="input-material">
                                        <label for="UserName" class="label-material">用户名</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="UserPassword" type="password" name="UserPassword" required data-msg="请输入密码" class="input-material">
                                        <label for="UserPassword" class="label-material">密码</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="UserPassword2" type="password" name="UserPassword2" required data-msg="请确认密码" class="input-material">
                                        <label for="UserPassword2" class="label-material">确认密码</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="EnglishName" type="text" name="EnglishName" required data-msg="请输入企业英文" class="input-material">
                                        <label for="EnglishName" class="label-material">企业英文</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="CompanyName" type="text" name="CompanyName" required data-msg="请输入企业名称" class="input-material">
                                        <label for="CompanyName" class="label-material">企业名称</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="ContactAddress" type="text" name="ContactAddress" required data-msg="请输入通讯地址" class="input-material">
                                        <label for="ContactAddress" class="label-material">通讯地址</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="CompanyContact" type="text" name="CompanyContact" required data-msg="请输入企业联系人" class="input-material">
                                        <label for="CompanyContact" class="label-material">企业联系人</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="ContactType" type="text" name="ContactType" required data-msg="请输入联系方式" class="input-material">
                                        <label for="ContactType" class="label-material">联系方式</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="CompanyQQ" type="text" name="CompanyQQ" required data-msg="请输入企业QQ号" class="input-material">
                                        <label for="CompanyQQ" class="label-material">企业QQ号</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="Zip" type="text" name="Zip" required data-msg="请输入邮编" class="input-material">
                                        <label for="Zip" class="label-material">邮编</label>
                                    </div>
                                    <div class="form-group">
                                        <input id="Email" type="text" name="Email" required data-msg="请输入邮箱" class="input-material">
                                        <label for="Email" class="label-material">邮箱</label>
                                    </div>

                                    <div class="form-group">
                                        <input id="Code" type="text" name="Code" required data-msg="请输入验证码" class="input-material" style="width: 50%">
                                        <label for="Code" class="label-material">验证码</label>
                                        <img src="~/Tool/ValidateCode.aspx" onclick="this.src='../Tool/ValidateCode.aspx?'+Math.random();" id="imgValidateCode" />
                                    </div>
                                    <div class="form-group">
                                        <button id="btn_Register" type="submit" class="btn btn-primary">注册</button>
                                    </div>
                                    <small>已有账号？ </small><a href="../ForeExhibition/Login" class="signup">点击登陆</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
    @Styles.Render("~/Content/themes/base/css")

</body>
</html>
